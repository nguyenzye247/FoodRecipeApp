<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/iv_ornament"
        layout="@layout/layout_bg_ornament_big"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@null"
        android:contentDescription="@null"
        android:elevation="@dimen/dimen_2dp"
        android:src="@drawable/ic_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_create_info_title"
        style="@style/TextAuthenticationTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:maxLines="2"
        android:text="@string/your_info"
        app:layout_constraintBottom_toTopOf="@id/scr_info_input"
        app:layout_constraintStart_toStartOf="@id/btn_back"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintVertical_chainStyle="packed" />

    <ScrollView
        android:id="@+id/scr_info_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_create_info_title"
        app:layout_constraintTop_toBottomOf="@id/tv_create_info_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_title"
                style="@style/TextInputTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:text="@string/name_title"
                app:layout_constraintBottom_toTopOf="@id/tip_name_input"
                app:layout_constraintStart_toStartOf="@id/tv_create_info_title"
                app:layout_constraintTop_toBottomOf="@id/tv_create_info_title" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_name_input"
                style="@style/TIPInputStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_name_title"
                app:layout_constraintTop_toBottomOf="@id/tv_name_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name_input"
                    style="@style/ETInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_name"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cs_dob_and_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_dob_and_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/tv_dob_title"
                    style="@style/TextInputTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    app:layout_constraintEnd_toStartOf="@id/gl_dob_and_gender"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tip_dob_input"
                    style="@style/TIPInputStyle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/gl_dob_and_gender"
                    app:layout_constraintStart_toStartOf="@id/tv_dob_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_dob_title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_dob_input"
                        style="@style/ETInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:digits="1234567890/-"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/your_date_of_birth"
                        android:inputType="date"
                        android:paddingTop="@dimen/dimen_4dp"
                        android:paddingBottom="@dimen/dimen_4dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_gender_title"
                    style="@style/TextInputTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:text="@string/gender"
                    app:layout_constraintStart_toEndOf="@id/gl_dob_and_gender"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tip_gender_input"
                    style="@style/TIPInputStyle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    app:endIconDrawable="@drawable/ic_down_carret"
                    app:endIconMinSize="@dimen/dimen_40dp"
                    app:endIconMode="custom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gl_dob_and_gender"
                    app:layout_constraintTop_toBottomOf="@id/tv_gender_title">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_gender_input"
                        style="@style/ETInputStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/your_gender"
                        android:paddingTop="@dimen/dimen_4dp"
                        android:paddingBottom="@dimen/dimen_4dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_height_title"
                style="@style/TextInputTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/height"
                app:layout_constraintStart_toStartOf="@id/tip_gender_input"
                app:layout_constraintTop_toBottomOf="@id/tip_gender_input" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_height_input"
                style="@style/TIPInputStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_height_title"
                app:layout_constraintTop_toBottomOf="@id/tv_height_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_height_input"
                    style="@style/ETInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/your_current_height"
                    android:inputType="number"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_weight_title"
                style="@style/TextInputTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/weight"
                app:layout_constraintStart_toStartOf="@id/tip_height_input"
                app:layout_constraintTop_toBottomOf="@id/tip_height_input" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_weight_input"
                style="@style/TIPInputStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_weight_title"
                app:layout_constraintTop_toBottomOf="@id/tv_weight_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_weight_input"
                    style="@style/ETInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/your_current_weight"
                    android:inputType="number"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_health_title"
                style="@style/TextInputTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="@string/health_status"
                app:layout_constraintStart_toStartOf="@id/tip_weight_input"
                app:layout_constraintTop_toBottomOf="@id/tip_weight_input" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_health_input"
                style="@style/TIPInputStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_health_title"
                app:layout_constraintTop_toBottomOf="@id/tv_health_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_health_input"
                    style="@style/ETInputStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:gravity="center_vertical"
                    android:hint="@string/your_current_weight"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_continue"
                style="@style/CaretButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:text="@string/continue_txt"
                app:icon="@drawable/ic_right_carret"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>