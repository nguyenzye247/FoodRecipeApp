<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/week_calendar_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_weekday_year_title"
            style="@style/TextBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textColor="@color/rcp_blue_200"
            android:textSize="@dimen/text_size_26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2023" />

        <TextView
            android:id="@+id/tv_weekday_title"
            style="@style/TextBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textColor="@color/rcp_blue_400"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toStartOf="@id/tv_weekday_year_title"
            app:layout_constraintTop_toBottomOf="@id/tv_weekday_year_title"
            tools:text="July" />

        <com.kizitonwose.calendar.view.WeekCalendarView
            android:id="@+id/week_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cv_daySize="seventhWidth"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:cv_dayViewResource="@layout/item_day_week_calendar"
            app:cv_orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_weekday_title" />

        <Button
            android:id="@+id/btn_weekly_plan"
            style="@style/WeeklyPlanButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_12dp"
            android:elevation="@dimen/dimen_6dp"
            android:text="@string/weekly_plan"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_weekday_year_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_weekday_year_title" />

        <TextView
            android:id="@+id/tv_breakfast_title"
            style="@style/CalendarMealTypeTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="@string/breakfast"
            app:layout_constraintStart_toStartOf="@id/tv_weekday_year_title"
            app:layout_constraintTop_toBottomOf="@id/week_calendar_view" />

        <ImageButton
            android:id="@+id/btn_add_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_2dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/tv_breakfast_title"
            app:layout_constraintEnd_toEndOf="@id/btn_weekly_plan"
            app:layout_constraintTop_toTopOf="@id/tv_breakfast_title"
            app:tint="@color/rcp_brown_200" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_breakfast_title" />

        <TextView
            android:id="@+id/tv_lunch_title"
            style="@style/CalendarMealTypeTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="@string/lunch"
            app:layout_constraintStart_toStartOf="@id/tv_breakfast_title"
            app:layout_constraintTop_toBottomOf="@id/rv_breakfast" />

        <ImageButton
            android:id="@+id/btn_add_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_2dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/tv_lunch_title"
            app:layout_constraintEnd_toEndOf="@id/btn_add_breakfast"
            app:layout_constraintTop_toTopOf="@id/tv_lunch_title"
            app:tint="@color/rcp_brown_200" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_lunch_title" />

        <TextView
            android:id="@+id/tv_dinner_title"
            style="@style/CalendarMealTypeTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="@string/dinner"
            app:layout_constraintStart_toStartOf="@id/tv_lunch_title"
            app:layout_constraintTop_toBottomOf="@id/rv_lunch" />

        <ImageButton
            android:id="@+id/btn_add_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_2dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@id/tv_dinner_title"
            app:layout_constraintEnd_toEndOf="@id/btn_add_lunch"
            app:layout_constraintTop_toTopOf="@id/tv_dinner_title"
            app:tint="@color/rcp_brown_200" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dinner_title" />

        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0dp"
            android:elevation="@dimen/dimen_10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_breakfast_title"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
