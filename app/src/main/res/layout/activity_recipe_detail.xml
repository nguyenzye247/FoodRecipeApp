<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="@dimen/dimen_0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextAppearance="@style/CollectionCollapseTitleAppearance"
            app:contentScrim="@android:color/white"
            app:expandedTitleTextAppearance="@style/CollectionExpandTitleAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="scale">

            <include
                android:id="@+id/layout_banner"
                layout="@layout/layout_recipe_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_280dp"
                app:layout_collapseMode="parallax" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <include
                android:id="@+id/layout_recipe_content"
                layout="@layout/layout_recipe_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12dp" />

            <include
                android:id="@+id/layout_direction_content"
                layout="@layout/layout_recipe_direction_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:visibility="gone" />
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_start_cooking"
        style="@style/CaretButtonStyle"
        android:layout_width="218dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:elevation="@dimen/dimen_10dp"
        android:text="@string/start_cooking"
        app:icon="@drawable/ic_right_carret"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

    <View
        android:id="@+id/view_fade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_96dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_activity_recipe_detail_fade"
        android:visibility="visible" />

    <include
        android:id="@+id/loading"
        layout="@layout/layout_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
