<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/iv_ornament"
            layout="@layout/layout_bg_ornament_big"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_margin_top_bg"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:elevation="@dimen/dimen_2dp"
            android:src="@drawable/ic_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_add_indicator"
            style="@style/CreateHealthGoalPLanButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:elevation="@dimen/dimen_6dp"
            android:text="@string/add_indicators"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_health_goal_title"
            style="@style/TextMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            tools:text="Lose weight" />

        <include
            android:id="@+id/start_weight"
            layout="@layout/layout_start_weight"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintEnd_toStartOf="@id/iv_from_to"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/btn_back"
            app:layout_constraintTop_toBottomOf="@id/tv_health_goal_title" />

        <ImageView
            android:id="@+id/iv_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_from_to"
            app:layout_constraintBottom_toBottomOf="@id/start_weight"
            app:layout_constraintEnd_toStartOf="@id/target_weight"
            app:layout_constraintStart_toEndOf="@id/start_weight"
            app:layout_constraintTop_toTopOf="@id/start_weight" />

        <include
            android:id="@+id/target_weight"
            layout="@layout/layout_target_weight"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/start_weight"
            app:layout_constraintEnd_toEndOf="@id/btn_add_indicator"
            app:layout_constraintStart_toEndOf="@id/iv_from_to"
            app:layout_constraintTop_toTopOf="@id/start_weight" />

        <include
            android:id="@+id/calories"
            layout="@layout/layout_daily_calories"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            app:layout_constraintEnd_toStartOf="@id/water"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/start_weight"
            app:layout_constraintTop_toBottomOf="@id/start_weight" />

        <include
            android:id="@+id/water"
            layout="@layout/layout_daily_water"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="@id/calories"
            app:layout_constraintEnd_toStartOf="@id/day_goal"
            app:layout_constraintStart_toEndOf="@id/calories"
            app:layout_constraintTop_toTopOf="@id/calories" />

        <include
            android:id="@+id/day_goal"
            layout="@layout/layout_day_goal"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/water"
            app:layout_constraintEnd_toEndOf="@id/target_weight"
            app:layout_constraintStart_toEndOf="@id/water"
            app:layout_constraintTop_toTopOf="@id/water" />

        <TextView
            android:id="@+id/tv_daily_suggestions_title"
            style="@style/TextMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/daily_suggestions"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toStartOf="@id/calories"
            app:layout_constraintTop_toBottomOf="@id/calories" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_daily_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_daily_suggestions_title" />

        <include
            android:id="@+id/loading"
            layout="@layout/layout_loading"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:elevation="@dimen/dimen_10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
