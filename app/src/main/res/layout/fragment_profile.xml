<?xml version="1.0" encoding="utf-8"?>
<com.nguyenhl.bk.foodrecipe.feature.widget.NestedCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="@dimen/dimen_0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleTextAppearance="@style/CollectionCollapseTitleAppearance"
            app:contentScrim="@android:color/white"
            app:expandedTitleTextAppearance="@style/CollectionExpandTitleAppearance"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="scale">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/iv_avatar_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_240dp"
                    android:contentDescription="@null"
                    android:foreground="@drawable/bg_collection_thumbnail"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_health_goal_plan"
                    style="@style/HealthGoalButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:elevation="@dimen/dimen_6dp"
                    android:text="@string/health_goal_plan"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/btn_edit_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btn_edit_profile" />

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="@dimen/dimen_3dp"
                    android:src="@drawable/ic_setting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="@dimen/dimen_24dp" />

                <ImageButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="@dimen/dimen_3dp"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintBottom_toBottomOf="@id/btn_settings"
                    app:layout_constraintEnd_toStartOf="@id/btn_settings"
                    app:layout_constraintTop_toTopOf="@id/btn_settings"
                    app:layout_goneMarginEnd="@dimen/dimen_24dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/dimen_280dp"
        android:layout_height="@dimen/dimen_280dp"
        app:layout_anchor="@id/app_bar_profile"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_behavior=".feature.util.ScrollAwareBehavior"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:lottie_autoPlay="true"
        app:lottie_fileName="json/anim_avatar.json"
        app:lottie_loop="true" />

    <!--    <de.hdodenhof.circleimageview.CircleImageView-->
    <!--        android:id="@+id/iv_user_avatar"-->
    <!--        android:layout_width="@dimen/dimen_160dp"-->
    <!--        android:layout_height="@dimen/dimen_160dp"-->
    <!--        app:layout_anchor="@id/app_bar_profile"-->
    <!--        app:layout_anchorGravity="bottom|center_horizontal"-->
    <!--        tools:src="@tools:sample/avatars"-->
    <!--        />-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/layout_profile"
            layout="@layout/layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_80dp" />

    </androidx.core.widget.NestedScrollView>

</com.nguyenhl.bk.foodrecipe.feature.widget.NestedCoordinatorLayout>
