<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_ingredient_detail">

    <TextView
        android:id="@+id/tv_ingredient_info"
        style="@style/TextRegularStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/dimen_6dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp"
        tools:text="okeokeokeoke" />

    <TextView
        android:id="@+id/tv_ingredient_title"
        style="@style/TextMediumStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_size_20sp"
        tools:text="What is me?" />

    <TextView
        android:id="@+id/tv_ingredient_description"
        style="@style/TextRegularStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:lineSpacingExtra="@dimen/dimen_6dp"
        android:textSize="@dimen/text_size_14sp"
        tools:text="asjdnasdbakdjhglakjbglkabslej balkejgblakjsb lkjadsbglkj abseg" />

</LinearLayout>
