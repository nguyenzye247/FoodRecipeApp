<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dimen_2dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_calendar_day"
            style="@style/CalendarDayItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            tools:text="24" />

        <TextView
            android:id="@+id/tv_calendar_weekday"
            style="@style/CalendarWeekDayItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:gravity="center"
            android:textColor="@color/black"
            tools:text="Tue" />

        <View
            android:id="@+id/indicator_view"
            android:layout_width="@dimen/dimen_6dp"
            android:layout_height="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/selector_week_day_indicator"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>
