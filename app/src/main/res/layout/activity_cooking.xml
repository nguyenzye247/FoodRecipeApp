<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarSize="@dimen/dimen_0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/iv_ornament"
                layout="@layout/layout_bg_ornament"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_margin_top_bg"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:elevation="@dimen/dimen_2dp"
                android:src="@drawable/ic_back_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_recipe_thumbnail"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:cardCornerRadius="@dimen/dimen_12dp"
                app:cardElevation="@dimen/dimen_0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/btn_back"
                app:layout_constraintTop_toBottomOf="@id/btn_back">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_recipe_thumbnail"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="@dimen/dimen_0dp"
                        android:contentDescription="@null"
                        android:foreground="@drawable/bg_collection_thumbnail"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="5:3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <TextView
                        android:id="@+id/tv_recipe_author"
                        style="@style/TextRegularStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginBottom="@dimen/dimen_16dp"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14sp"
                        app:layout_constraintBottom_toBottomOf="@id/iv_recipe_thumbnail"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Le Nguyen" />

                    <TextView
                        android:id="@+id/tv_recipe_name"
                        style="@style/TextMediumStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_18sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_recipe_author"
                        app:layout_constraintStart_toStartOf="@id/tv_recipe_author"
                        tools:text="TEST" />

                    <TextView
                        android:id="@+id/tv_recipe_prep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:textColor="@color/rcp_cream_100"
                        android:textSize="@dimen/text_size_10sp"
                        app:drawableStartCompat="@drawable/ic_clock"
                        app:drawableTint="@color/rcp_cream_100"
                        app:layout_constraintBottom_toTopOf="@id/tv_recipe_name"
                        app:layout_constraintStart_toStartOf="@id/tv_recipe_name"
                        tools:text="12 min" />

                    <TextView
                        android:id="@+id/tv_recipe_cook_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:gravity="center"
                        android:textColor="@color/rcp_cream_100"
                        android:textSize="@dimen/text_size_10sp"
                        app:drawableStartCompat="@drawable/ic_clock_fill"
                        app:drawableTint="@color/rcp_cream_100"
                        app:layout_constraintBottom_toBottomOf="@id/tv_recipe_prep_time"
                        app:layout_constraintStart_toEndOf="@id/tv_recipe_prep_time"
                        app:layout_constraintTop_toTopOf="@id/tv_recipe_prep_time"
                        tools:text="12 min" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp2_cooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:fitsSystemWindows="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cv_recipe_thumbnail"
                app:layout_constraintStart_toStartOf="@id/cv_recipe_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/cv_recipe_thumbnail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
