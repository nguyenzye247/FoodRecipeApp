<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_cooking_direction_title"
        style="@style/TextBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/directions"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cooking_direction_description"
        style="@style/TextRegularStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/follow_to_cook"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/tv_cooking_direction_title"
        app:layout_constraintTop_toBottomOf="@id/tv_cooking_direction_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cooking_direction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_finish_cooking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cooking_direction_description" />

    <Button
        android:id="@+id/btn_finish_cooking"
        style="@style/CaretButtonStyle"
        android:layout_width="218dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:elevation="@dimen/dimen_10dp"
        android:text="@string/finish"
        app:icon="@drawable/ic_right_carret"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_cooking_direction"
        app:layout_constraintVertical_bias="1" />

    <Button
        android:id="@+id/btn_previous_cooking"
        style="@style/CaretSmallButtonStyle"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:elevation="@dimen/dimen_10dp"
        app:icon="@drawable/ic_left_carret"
        app:layout_constraintBottom_toBottomOf="@id/btn_finish_cooking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_finish_cooking"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>