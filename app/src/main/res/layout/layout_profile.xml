<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_profile">

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/TextBoldStyle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/rcp_blue_200"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Huong Le Nguyen" />

    <TextView
        android:id="@+id/tv_user_dob"
        style="@style/TextRegularStyle"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/rcp_grey_300"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        tools:text="24-07-2001" />

    <LinearLayout
        android:id="@+id/ll_user_health_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/bg_user_profile_health_info"
        android:baselineAligned="false"
        android:elevation="@dimen/dimen_4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_user_dob">

        <LinearLayout
            android:id="@+id/ll_user_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_height_value"
                style="@style/UserHealthInfoValueTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="177.0" />

            <TextView
                android:id="@+id/tv_height_title"
                style="@style/UserHealthInfoTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weight_value"
                style="@style/UserHealthInfoValueTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="60" />

            <TextView
                android:id="@+id/tv_weight_title"
                style="@style/UserHealthInfoTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_age_value"
                style="@style/UserHealthInfoValueTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22" />

            <TextView
                android:id="@+id/tv_age_title"
                style="@style/UserHealthInfoTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age" />

        </LinearLayout>

    </LinearLayout>

    <com.nguyenhl.bk.foodrecipe.feature.widget.CommonTabLayout2
        android:id="@+id/tl_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        app:layout_constraintTop_toBottomOf="@id/ll_user_health_info"
        app:tl_iconGravity="RIGHT"
        app:tl_iconHeight="@dimen/dimen_24dp"
        app:tl_iconMargin="@dimen/dimen_0dp"
        app:tl_iconWidth="@dimen/dimen_24dp"
        app:tl_indicator_anim_duration="500"
        app:tl_indicator_anim_enable="true"
        app:tl_indicator_color="@color/rcp_blue_200"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_style="NORMAL"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/rcp_blue_200"
        app:tl_textUnselectColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tl_user_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
