<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/dimen_12dp"
    android:layout_marginBottom="@dimen/dimen_36dp"
    android:background="@drawable/bg_bottom_sheet_full_round">

    <TextView
        android:id="@+id/tv_detect_result_title"
        style="@style/TextBoldStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/detect_result"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_find_all"
        style="@style/WeeklyPlanButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_6dp"
        android:text="@string/find_all"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv_detect_result_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_detect_result_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_detect_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detect_result_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
