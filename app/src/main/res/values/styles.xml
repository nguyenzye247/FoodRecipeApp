<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextRegularStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/rcp_black_100</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextMediumStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textColor">@color/rcp_black_100</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextBoldStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/gordita_bold</item>
        <item name="android:textColor">@color/rcp_black_100</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextSplashAppNameStyle" parent="TextMediumStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_30sp</item>
    </style>

    <style name="TextInputTitleStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextAuthenticationStyle" parent="TextMediumStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextAuthenticationTitleStyle" parent="TextMediumStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_40sp</item>
    </style>

    <style name="TextDialogTitleStyle" parent="TextMediumStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="ForgotPasswordTextStyle" parent="TextRegularStyle">
        <item name="android:textColor">@color/rcp_blue_200</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="CollectionCollapseTitleAppearance" parent="TextMediumStyle">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollectionExpandTitleAppearance" parent="TextMediumStyle">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RecipeDetailDirectionsTabTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rcp_black_100</item>
    </style>

    <style name="SearchRecipeTabTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rcp_black_100</item>
    </style>

    <style name="SearchRecipeTabTextSelectedStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rcp_blue_400</item>
    </style>

    <style name="SearchFilterTitleTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rcp_black_100</item>
    </style>

    <style name="CalendarDayItemTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rcp_black_100</item>
    </style>

    <style name="CalendarWeekDayItemTextStyle" parent="TextRegularStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/rcp_black_100</item>
    </style>

    <style name="ViewAllTextStyle" parent="TextRegularStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">@dimen/dimen_4dp</item>
        <item name="android:paddingBottom">@dimen/dimen_4dp</item>
        <item name="android:paddingStart">@dimen/dimen_4dp</item>
        <item name="android:paddingEnd">@dimen/dimen_4dp</item>
    </style>

    <style name="MainListTitleTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>


    <style name="CalendarMealTypeTitleTextStyle" parent="TextBoldStyle">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainListDescriptionTextStyle" parent="TextRegularStyle">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/rcp_grey_300</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="TIPInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_10dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_10dp</item>
        <item name="strokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="hintEnabled">false</item>
        <item name="colorErrorContainer">@color/rcp_red_200</item>
        <item name="boxStrokeErrorColor">@color/rcp_red_200</item>
        <item name="errorTextColor">@color/rcp_red_100</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0dp</item>
        <item name="android:paddingTop">@dimen/dimen_0dp</item>
        <item name="android:paddingBottom">@dimen/dimen_0dp</item>
        <item name="boxBackgroundColor">@color/rcp_blue_100</item>
    </style>

    <style name="TIPAuthenticationPasswordStyle" parent="TIPInputStyle">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleDrawable">@drawable/select_toggle_password</item>
        <item name="passwordToggleTint">@color/black</item>
    </style>

    <style name="TIPSearchStyle" parent="TIPInputStyle">
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/rcp_black_100</item>
    </style>

    <style name="ETInputStyle">
        <item name="fontFamily">@font/gordita_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="hintTextColor">@color/rcp_grey_100</item>
        <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
    </style>

    <style name="AuthenticationButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/rcp_cream_100</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/rcp_blue_200</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="endIconMode">custom</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/dimen_8dp</item>
    </style>

    <style name="CaretButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/rcp_cream_100</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/rcp_blue_200</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="endIconMode">custom</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/dimen_8dp</item>
    </style>

    <style name="WeeklyPlanButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/rcp_cream_100</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/rcp_brown_200</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="endIconMode">custom</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/dimen_8dp</item>
    </style>

    <style name="CaretSmallButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/rcp_blue_300</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="endIconMode">custom</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">@dimen/dimen_0dp</item>
    </style>

    <style name="DialogYesButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/rcp_blue_200</item>
        <item name="android:background">@drawable/bg_app_dialog_yes_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_14dp</item>
        <item name="android:paddingEnd">@dimen/dimen_14dp</item>
    </style>

    <style name="DialogCancelButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gordita_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/rcp_grey_100</item>
        <item name="android:background">@drawable/bg_app_dialog_cancel_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_14dp</item>
        <item name="android:paddingEnd">@dimen/dimen_14dp</item>
    </style>

</resources>
